<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tittleCaloriasRecomendadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Calorías Recomendadas: "
                android:textColor="#3F51B5"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCaloriasRecomendadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:padding="8dp"
                android:text="0"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tittleCaloriasConsumidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Calorías Consumidas: "
                android:textColor="#3F51B5"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCaloriasConsumidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:padding="8dp"
                android:text="0"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tittleCaloriasRestantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Calorías Restantes: "
                android:textColor="#3F51B5"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCaloriasRestantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:padding="8dp"
                android:text="0"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Ingrese una comida:"
            android:textColor="#009688"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etComida"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="48dp"
            android:hint="Nombre de la comida"
            android:inputType="text" />

        <EditText
            android:id="@+id/etCaloriasComida"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="48dp"
            android:hint="Calorías de la comida"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnAgregarComida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:text="Añadir Comida" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>